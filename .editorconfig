# editorconfig.org

# top-most EditorConfig file
root = true

[*]
# 4 space indentation
indent_style = space
indent_size = 4
end_of_line = crlf

# Unix-style newlines with a newline ending every file
# Set default charset
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false